<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="="
        android:id="@+id/textEqual"
        android:textSize="100sp"
        android:layout_below="@+id/textOperator"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textEqual"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_width="0dp">
            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="89"
                android:textSize="52sp"
                android:id="@+id/button1" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_width="0dp">
            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="17"
                android:textSize="52sp"
                android:id="@+id/button2" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_width="0dp">
            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="72"
                android:textSize="52sp"
                android:id="@+id/button3" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="+"
        android:id="@+id/textOperator"
        android:textSize="100sp"
        android:layout_alignBaseline="@+id/textA"
        android:layout_alignBottom="@+id/textA"
        android:layout_alignStart="@+id/textEqual" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="8"
        android:id="@+id/textA"
        android:textSize="80sp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="30dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/textOperator" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="9"
        android:id="@+id/textB"
        android:textSize="80sp"
        android:layout_marginStart="30dp"
        android:layout_alignBaseline="@+id/textOperator"
        android:layout_alignBottom="@+id/textOperator"
        android:layout_toEndOf="@+id/textOperator" />
</RelativeLayout>
