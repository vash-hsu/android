<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.blogspot.rulesare.a9x9math.TimesActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="9"
        android:id="@+id/textA"
        android:textSize="100sp"
        android:layout_marginTop="80sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="x"
        android:id="@+id/textOperator"
        android:textSize="100sp"
        android:layout_alignTop="@+id/textA"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="9"
        android:id="@+id/textB"
        android:textSize="100sp"
        android:layout_alignTop="@+id/textOperator"
        android:layout_toEndOf="@+id/textOperator"
        android:layout_marginStart="35sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="="
        android:id="@+id/textEqual"
        android:textSize="100sp"
        android:layout_below="@+id/textOperator"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textEqual"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_width="0dp">
            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="80"
                android:textSize="70sp"
                android:id="@+id/button1" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_width="0dp">
            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="81"
                android:textSize="70sp"
                android:id="@+id/button2" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_width="0dp">
            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="82"
                android:textSize="70sp"
                android:id="@+id/button3" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
